#!/bin/sh
# Mock etherwake implementation
echo "Mock etherwake called with arguments: $@" >> /var/www/mock/mock.log

# Read mock config
CONFIG=$(cat /var/www/mock_config.json)
MOCK_RESULT=$(echo "$CONFIG" | jq -r '.mock_etherwake_result')

if [ "$MOCK_RESULT" = "success" ]; then
    exit 0
else
    exit 1
fi
